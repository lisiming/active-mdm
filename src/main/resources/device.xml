<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="device" extends="default">
        <action name="*Device" method="{1}" class="deviceAction">
            <result name="list">/devices/list.jsp</result>
            <result name="show">/devices/show.jsp</result>
            <result name="input">/devices/form.jsp</result>
            <result type="redirectAction">listDevice</result>
        </action>
    </package>
</struts>
